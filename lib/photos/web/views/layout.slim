              input.form-control type='text' style="width: 100%; display: block;" autofocus='autofocus' name='destination' value="#{params[:destination]}"

            .form-group
              input.form-control type='submit'

          .panel.panel-default
            == slim :index

        .col-sm-9
          == yield

