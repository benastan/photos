  body
    .container
      .navbar.navbar-default.spacing-above-double
        .navbar-header
          ul.nav.navbar-nav
            li
              a href="/?destination=#{params[:destination]}" Home

      .row
        .col-sm-3
          #ajaxIndicator.hidden.alert.alert-info
            ' Please wait...

          form action=''
